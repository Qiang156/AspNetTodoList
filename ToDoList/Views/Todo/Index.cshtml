@model TodoViewModel
@using ToDoList.Models.Entity
@using Humanizer

@{
    ViewData["Title"] = "Manage your todo list";
}

<div class="panel panel-default todo-panel">
  <div class="panel-heading">@ViewData["title"]</div>


<form id="updateForm" asp-action="Update" method="POST">    
    <input type="hidden" id="action" name="action" value="">
    <input type="hidden" id="id" name="id" value="">
</form>

  <table class="table table-hover">
      <thead>
          <tr>
              <td>Done</td>
              <td>Title</td>
              <td>Due</td>
              <td>Created</td>
              <td>Updated</td>
              <td>Operation</td>
          </tr>
      </thead>

      @foreach (var item in Model.Items)
      {
        <tr>  
            
            @if(item.isDone) 
            {
                <td>&#x2714;</td>
                <td class="done">@item.title</td>
            } else {
                <td>
                    <input type="checkbox" class="done-checkbox" value="@item.id" checked="@item.isDone" disabled="@item.isDone">
                </td>
                <td>@item.title</td>
                
            }
            
            <td>@item.dueAt.Humanize()</td>
            <td>@item.createdAt.Humanize()</td>
            <td>@item.updatedAt.Humanize()</td>
            <td><button class="btn-delete" name="delete" value="@item.id">Delete</button></td>
        </tr>
      }
  </table>

  <div class="panel-footer add-item-form">
    @await Html.PartialAsync("AddItemPartial", new TodoItem())
  </div>
</div>
